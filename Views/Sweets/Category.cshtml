@model IEnumerable<CandyShop.Models.DBModels.Sweetness>

<h1>@ViewData["categoryName"]</h1>

<div class="product-container">
    @foreach (var item in Model)
    {
        <div class="product">
            <a href="@Url.Action("Details", "Sweets", new {id = item.ID})">
                <div class="photo justify-content-center align-items-center d-flex">
                    <img src="~/Images/Sweets/sweetness_@(item.ID).jpg" alt="A beautiful image" width="140">
                </div>
            </a>
            <div class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="text-center">
                @Html.DisplayFor(modelItem => item.CurrentPrice)
                $
            </div>
            <div class="add-to-basket">
                <button class="cart-button" onclick="setCookie('@item.ID')">
                    Add to basket
                </button>
            </div>
        </div>
    }
</div>
