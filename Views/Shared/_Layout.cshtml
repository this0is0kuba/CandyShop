<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CandyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CandyShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <header class="header">
        <div class="head-photo justify-content-center align-items-center d-flex">
            <div class="text-center">
                <h1>Candy Shop</h1>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CandyShop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Chocolate">Chocolate</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="GummyCandies">GummyCandies</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Lollipops">Lollipops</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Candies">Candies</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Kits" asp-action="Index">Kits</a>
                        </li>
                    </ul>
                    <div class="search-containter">
                        <form asp-controller="Home" asp-action="Search">
                            <div class="d-flex flex-row">
                                <div style="height: 35px">
                                    <input type="text" placeholder="Search.." name="searchPhrase" style="height: 100%">
                                </div>
                                <div style="height: 35px">
                                    <button type="submit" style="height: 100%">
                                        <div class="d-flex justify-content-center">
                                            <span class="material-symbols-outlined">
                                                search
                                            </span>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="m-1">
                        <button onclick="location.href='@Url.Action("Basket", "Home")'">
                            <span class="material-symbols-outlined">
                                shopping_basket
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex flex-row ">
        <nav class="w-15 p-3 border box-shadow position-sticky sticky-top" style="height: 300px;">
                <ul class="navbar-nav container-fluid">
                    <li>
                        <a class="nav-link text-dark underline mt-1" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Chocolate">Chocolate</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark underline mt-1" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="GummyCandies">GummyCandies</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark underline mt-1" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Lollipops">Lollipops</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark underline mt-1" asp-area="" asp-controller="Sweets" asp-action="Category" asp-route-categoryName="Candies">Candies</a>
                    </li>
                    <li>
                        <a class="nav-link text-dark underline mt-1" asp-area="" asp-controller="Kits" asp-action="Index">Kits</a>
                    </li>
                </ul>
            </nav>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CandyShop
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
