@model IEnumerable<CandyShop.Models.DBModels.Kit>

<h1>Kits</h1>

<div class="product-container">
    @foreach (var item in Model)
    {
        <div class="product">
            <a href="@Url.Action("Details", "Kits", new {id = item.ID})">
                <div class="photo">
                </div>
            </a>
            <div class="text-center">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="text-center">
                @Html.DisplayFor(modelItem => item.CurrentPrice)
                $
            </div>
            <div class="add-to-basket">
                <button style="background-color: #FF78C4;" onclick="setCookie('@(item.ID + 1000)')">
                    Add to basket
                </button>
            </div>
        </div>
    }
</div>
