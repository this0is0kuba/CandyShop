<h1>Your cart</h1>
<table>
    <tr>
        <th>Product</th>
        <th>Amount</th>
        <th>Price</th>
        <th>Sum price</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>

    <tbody id="basket">
        @foreach (var item in ViewData)
        {
            if (item.Key.ToString() != "totalCost")
            {
                var data = item.Value.ToString().Split(";");

                <tr>
                    <td><a href="@data[5]" class="product-link">@data[2]</a></td>
                    <td>@data[0]</td>
                    <td>@data[3]</td>
                    <td>@data[4]</td>
                    <td>@data[1]</td>
                    <td>
                        <button class="cart-button" onclick="addOneProduct(event, '@item.Key')">+</button>
                        <button class="cart-button" onclick="removeOneProduct(event, '@item.Key')">-</button>
                        <button class="cart-button" onclick="deleteCookie('@item.Key')" style="float: right;">
                            Remove
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>


<div class="d-flex p-2">
    <h3 class="m-1">Total Cost:</h3>
    <h3 class="m-1" id="totalCost">@ViewData["totalCost"]</h3>
</div>
<div class="p-2 m-1">
    <a class="cart-button text-dark p-2" style="text-decoration: none; border: 2px solid black;" asp-area="" asp-controller="Orders" asp-action="Create">Place your order</a>
</div>

